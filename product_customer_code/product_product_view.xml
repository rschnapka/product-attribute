<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>
        
        <record model="ir.ui.view" id="product_product_form_inh_product_customer_code_01">
            <field name="name">product.product.form.inh.product.customer.code.01</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
            <!--  convert string to name reference, 
                  adjust position due to missing name of page 'General Information' -->
                <xpath expr="//page[@name='notes']" position="after">
                    <page name="Customer Code" string="Customer Codes">
                         <field name="product_customer_code_ids" nolabel="1" colspan="4" widget="one2many_list">
                            <tree string="Product Customer Code" editable="bottom">
                                <field name="product_code" string="Product Code"/>
                                <field name="partner_id" string="Partner"/>
                                <field name="company_id" string="Company" widget="selection" groups="base.group_multi_company"/>
                            </tree>
                            <form name="form_product_customer_code" string="Product Customer Code">
                                <field name="product_code" string="Product Code"/>
                                <field name="partner_id" string="Partner"/>
                            </form> 
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>